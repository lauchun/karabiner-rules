{
  "title": "Change caps_lock to left_control on press and hold",
  "rules": [
    {
      "description": "Change caps_lock to left_control on press and hold",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_control" }],
          "to_if_alone": [{ "key_code": "caps_lock" }]
        }
      ]
    }
  ]
}
